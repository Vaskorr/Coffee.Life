<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buy_ticket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuyTicket">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="314dp"
        android:layout_height="91dp"
        android:layout_marginTop="64dp"
        android:text="Купить абонемент Coffee Life"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Lifes"
        android:layout_width="232dp"
        android:layout_height="40dp"
        android:layout_marginTop="56dp"
        android:text="Выбрано Life'ов: 200"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <SeekBar
        android:id="@+id/seekBarLifes"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_marginTop="112dp"
        android:indeterminate="false"
        android:max="10"
        android:thumb="@drawable/iii"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lifes" />

    <TextView
        android:id="@+id/rub"
        android:layout_width="100dp"
        android:layout_height="17dp"
        android:text="(RUB 100.00)"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/seekBarLifes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lifes" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="157dp"
        android:layout_height="25dp"
        android:layout_marginBottom="92dp"
        android:text="Как это работает?"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button4"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="220dp"
        android:layout_height="62dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/butttt"
        android:onClick="Payment"
        android:text="Заказать абонемент"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBarLifes"
        app:layout_constraintVertical_bias="0.216" />

</androidx.constraintlayout.widget.ConstraintLayout>